root = true

# 所有文件的默认配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript/TypeScript/Vue 文件
[*.{js,ts,vue,json}]
indent_style = space
indent_size = 2

# Go 文件
[*.go]
indent_style = tab
indent_size = 4

# Shell 脚本
[*.sh]
indent_style = space
indent_size = 4

# YAML 文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab