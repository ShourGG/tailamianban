# Environment Configuration Template
# Copy this file to .env and fill in the values
# NEVER commit the actual .env file to version control!

# ============================================
# Database Configuration
# ============================================
DB_NAME=terraria_panel
DB_USER=terraria
DB_PASSWORD=your_secure_database_password_here

# ============================================
# Security Configuration
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_secure_jwt_secret_here_min_32_chars

# Redis password for caching
REDIS_PASSWORD=your_secure_redis_password_here

# Grafana admin password
GRAFANA_PASSWORD=your_secure_grafana_password_here

# ============================================
# Domain Configuration
# ============================================
DOMAIN_NAME=terraria-panel.example.com
SSL_EMAIL=admin@example.com

# ============================================
# Terraria Server Configuration
# ============================================
TERRARIA_MAX_SERVERS=10
TERRARIA_PORT_RANGE=7777-7800
TERRARIA_DEFAULT_WORLD=world1

# ============================================
# Application Configuration
# ============================================
APP_ENV=production
APP_DEBUG=false
LOG_LEVEL=info

# ============================================
# Server Configuration
# ============================================
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30
SERVER_IDLE_TIMEOUT=120

# ============================================
# Backup Configuration
# ============================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# ============================================
# Resource Limits
# ============================================
MAX_UPLOAD_SIZE=100M
MAX_WORLD_SIZE=500M